<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteLight"
    tools:context=".activity.SignInPhoneActivity"
    tools:ignore="ContentDescription" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_container_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_SignInPhone_Send"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="@dimen/button_width_small"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/btn_small_2_selector"
            android:fontFamily="@font/coresans_cr_medium"
            android:text="@string/button_verify"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/button_font_size_small_flat"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/inputTxtLayout_SignInPhoneVerification_Code_1"
            app:layout_constraintTop_toBottomOf="@+id/inputTxtLayout_SignInPhoneVerification_Code_1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_SignInPhone_Header_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/coresans_cr_regular"
            android:text="@string/sign_in_phone_act_header"
            android:textAlignment="textStart"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/text_font_size_header_2"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_SignInPhone_Header_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/coresans_cr_regular"
            android:text="@string/sign_in_phone_act_header_2"
            android:textAlignment="textStart"
            android:textColor="@color/colorSecondary2"
            android:textSize="@dimen/text_font_size_header_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_SignInPhone_Header_1" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_SignInPhone_Send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_SignInPhone_Header_2"
            app:layout_constraintTop_toBottomOf="@+id/txt_SignInPhone_Header_2">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTxtLayout_SignInPhoneVerification_Code_1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginEnd="33dp"
                app:boxStrokeColor="@color/colorSecondary3"
                app:hintEnabled="false"
                app:layout_constraintEnd_toStartOf="@+id/inputTxtLayout_SignInPhoneVerification_Code_2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTxt_SignInPhoneVerification_Code_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/coresans_cr_medium"
                    android:gravity="start"
                    android:inputType="phone"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorSecondary"
                    android:textColorHint="@color/colorSecondary4" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTxtLayout_SignInPhoneVerification_Code_2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginEnd="33dp"
                app:boxStrokeColor="@color/colorSecondary3"
                app:hintEnabled="false"
                app:layout_constraintEnd_toStartOf="@+id/inputTxtLayout_SignInPhoneVerification_Code_3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTxt_SignInPhoneVerification_Code_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/coresans_cr_medium"
                    android:gravity="start"
                    android:inputType="phone"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorSecondary"
                    android:textColorHint="@color/colorSecondary4" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTxtLayout_SignInPhoneVerification_Code_3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginEnd="33dp"
                app:boxStrokeColor="@color/colorSecondary3"
                app:hintEnabled="false"
                app:layout_constraintEnd_toStartOf="@+id/inputTxtLayout_SignInPhoneVerification_Code_4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTxt_SignInPhoneVerification_Code_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/coresans_cr_medium"
                    android:gravity="start"
                    android:inputType="phone"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorSecondary"
                    android:textColorHint="@color/colorSecondary4" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTxtLayout_SignInPhoneVerification_Code_4"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="70dp"
                android:layout_height="50dp"
                app:boxStrokeColor="@color/colorSecondary3"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTxt_SignInPhoneVerification_Code_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/coresans_cr_medium"
                    android:gravity="start"
                    android:inputType="phone"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorSecondary"
                    android:textColorHint="@color/colorSecondary4" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>