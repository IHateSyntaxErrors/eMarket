<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.activities.PayWithCreditCardActivity"
    tools:ignore="ContentDescription" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_title_only" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_container_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/txt_Header_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/core_sans_cr_45_regular"
            android:text="@string/txt_credit_card_details"
            android:textAlignment="textStart"
            android:textColor="@color/colorText"
            android:textSize="@dimen/txt_font_size_header_24"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_Header_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/core_sans_cr_45_regular"
            android:text="@string/txt_credit_card_details_2"
            android:textAlignment="textStart"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/txt_font_size_header_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Header_1" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputTxtLayout_Credit_Card_Number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:layout_constraintEnd_toEndOf="@+id/txt_Header_2"
            app:layout_constraintStart_toStartOf="@+id/txt_Header_2"
            app:layout_constraintTop_toBottomOf="@+id/txt_Header_2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTxt_Credit_Card_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/core_sans_cr_55_medium"
                android:gravity="start"
                android:hint="@string/input_txt_hint_card_number"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorSecondary4"
                android:textSize="@dimen/txt_font_size_header_16" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputTxtLayout_Credit_Card_Full_Name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="@+id/inputTxtLayout_Credit_Card_Number"
            app:layout_constraintStart_toStartOf="@+id/inputTxtLayout_Credit_Card_Number"
            app:layout_constraintTop_toBottomOf="@+id/inputTxtLayout_Credit_Card_Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTxt_Credit_Card_Full_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/core_sans_cr_55_medium"
                android:gravity="start"
                android:hint="@string/input_txt_hint_card_name"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorSecondary4"
                android:textSize="@dimen/txt_font_size_header_16" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputTxtLayout_Credit_Card_Exp_Date"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:counterMaxLength="5"
            app:hintEnabled="false"
            app:layout_constraintEnd_toStartOf="@+id/inputTxtLayout_Credit_Card_CVV"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/inputTxtLayout_Credit_Card_Full_Name"
            app:layout_constraintTop_toBottomOf="@+id/inputTxtLayout_Credit_Card_Full_Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTxt_Credit_Card_Exp_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/core_sans_cr_55_medium"
                android:gravity="start"
                android:hint="@string/input_txt_hint_card_exp_date"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorSecondary4"
                android:textSize="@dimen/txt_font_size_header_16" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputTxtLayout_Credit_Card_CVV"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:hintEnabled="false"
            app:counterMaxLength="3"
            app:layout_constraintEnd_toEndOf="@+id/inputTxtLayout_Credit_Card_Full_Name"
            app:layout_constraintTop_toBottomOf="@+id/inputTxtLayout_Credit_Card_Full_Name"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTxt_Credit_Card_CVV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/core_sans_cr_55_medium"
                android:gravity="start"
                android:hint="@string/input_txt_hint_card_cvv"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorSecondary4"
                android:textSize="@dimen/txt_font_size_header_16" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Authorize"
            style="@style/ButtonStyle.PrimaryColor"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height_small_37"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="36dp"
            android:text="@string/txt_authorize"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/inputTxtLayout_Credit_Card_Full_Name"
            app:layout_constraintTop_toBottomOf="@+id/inputTxtLayout_Credit_Card_Exp_Date" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
