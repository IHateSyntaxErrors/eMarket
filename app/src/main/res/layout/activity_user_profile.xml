<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    tools:context=".ui.activities."
    tools:ignore="contentDescription">

    <!-- TODO: CONTEXT -->

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_user_profile_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frameLayout_User_Picture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/view_User_Picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_user_sample" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_User_Picture_Frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:elevation="3dp"
                    android:src="@drawable/shape_user_profile_frame" />


            </FrameLayout>

            <TextView
                android:id="@+id/textView_Full_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/core_sans_cr_55_medium"
                android:text="Nikolas Pateras"
                android:textColor="@color/colorText"
                android:textSize="@dimen/txt_font_size_header_24"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout_User_Picture" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_Body"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/shape_container_dialog_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_Full_Name"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/textView_Account_Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="29dp"
                    android:fontFamily="@font/core_sans_cr_55_medium"
                    android:text="@string/txt_account_info"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/txt_font_size_header_24"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:fontFamily="@font/core_sans_cr_55_medium"
                    android:text="Full Name"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/txt_font_size_header_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_Account_Info"
                    app:layout_constraintTop_toBottomOf="@+id/textView_Account_Info" />

                <TextView
                    android:id="@+id/textView_Name_Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/core_sans_cr_55_medium"
                    android:text="Nikolas Pateras"
                    android:textColor="@color/colorText2"
                    android:textSize="@dimen/txt_font_size_header_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_Name"
                    app:layout_constraintTop_toBottomOf="@+id/textView_Name" />

                <TextView
                    android:id="@+id/textView_Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/core_sans_cr_55_medium"
                    android:text="Phone Number"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/txt_font_size_header_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_Name"
                    app:layout_constraintTop_toBottomOf="@+id/textView_Name_Value" />

                <TextView
                    android:id="@+id/textView_Phone_Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/core_sans_cr_55_medium"
                    android:text="+357 99009796"
                    android:textColor="@color/colorText2"
                    android:textSize="@dimen/txt_font_size_header_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_Phone"
                    app:layout_constraintTop_toBottomOf="@+id/textView_Phone" />

                <TextView
                    android:id="@+id/textView_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/core_sans_cr_55_medium"
                    android:text="Address"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/txt_font_size_header_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_Name"
                    app:layout_constraintTop_toBottomOf="@+id/textView_Phone_Value" />

                <TextView
                    android:id="@+id/textView_Address_Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/core_sans_cr_55_medium"
                    android:text="Greece, Neorion 113, 18534"
                    android:textColor="@color/colorText2"
                    android:textSize="@dimen/txt_font_size_header_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_Address"
                    app:layout_constraintTop_toBottomOf="@+id/textView_Address" />

                <TextView
                    android:id="@+id/textView_Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/core_sans_cr_55_medium"
                    android:text="Email"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/txt_font_size_header_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_Name"
                    app:layout_constraintTop_toBottomOf="@+id/textView_Address_Value" />

                <TextView
                    android:id="@+id/textView_Email_Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/core_sans_cr_55_medium"
                    android:text="nikolas.98@live.com"
                    android:textColor="@color/colorText2"
                    android:textSize="@dimen/txt_font_size_header_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_Email"
                    app:layout_constraintTop_toBottomOf="@+id/textView_Email" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>