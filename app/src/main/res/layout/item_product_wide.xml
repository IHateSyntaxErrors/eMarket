<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:id="@+id/cardView_SingleItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    android:clipToPadding="true"
    android:clickable="true"
    app:cardBackgroundColor="@color/colorTransparent"
    app:cardElevation="0dp"
    app:cardCornerRadius="15dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView_Date"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_container_recycler_view_horizontal">

        <ImageView
            android:id="@+id/imgView_Product"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_picture"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtView_Quantity"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_circle_low_opacity"
            android:fontFamily="@font/core_sans_cr_55_medium"
            android:gravity="center"
            android:text="\?"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_font_size_header_16"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgView_Product"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout_Chevron"
            app:layout_constraintTop_toTopOf="@+id/imgView_Product"
            app:layout_constraintVertical_bias="0.535"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtView_Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="9dp"
            android:ellipsize="end"
            android:fontFamily="@font/core_sans_cr_55_medium"
            android:maxLines="1"
            android:text="@string/txt_loading"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/txt_font_size_header_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout_Chevron"
            app:layout_constraintStart_toEndOf="@+id/imgView_Product"
            app:layout_constraintTop_toTopOf="@+id/imgView_Product" />

        <TextView
            android:id="@+id/textView_Arriving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/core_sans_cr_45_regular"
            android:maxLines="1"
            android:text="@string/txt_loading"
            android:textColor="@color/colorSecondary2"
            android:textSize="@dimen/txt_font_size_header_14"
            app:layout_constraintBottom_toBottomOf="@+id/imgView_Product"
            app:layout_constraintEnd_toEndOf="@+id/txtView_Price"
            app:layout_constraintStart_toStartOf="@+id/txtView_Price"
            app:layout_constraintTop_toBottomOf="@+id/txtView_Price"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtView_Price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:ellipsize="end"
            android:fontFamily="@font/core_sans_cr_55_medium"
            android:maxLines="1"
            android:text="@string/txt_loading"
            android:textColor="@color/colorSecondary2"
            android:textSize="@dimen/txt_font_size_header_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtView_Quantity"
            app:layout_constraintStart_toStartOf="@+id/txtView_Name"
            app:layout_constraintTop_toBottomOf="@+id/txtView_Name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_Chevron"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/selector_recycler_chevron_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgView_Chevron"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_chevron_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorContainer" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
