<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorSecondary3</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->
    <style name="CustomActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/svg_sliders</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:contentDescription">@string/text_options</item>
    </style>

    <!-- TextViews -->
    <style name="TextView_Header_Main_Dark_14">
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/text_font_size_header_14</item>
    </style>

    <style name="TextView_Header_Main_Dark_24">
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_font_size_header_24</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_Header_Secondary_LightDark_16">
        <item name="android:fontFamily">@font/core_sans_cr_45_regular</item>
        <item name="android:textColor">@color/colorSecondary2</item>
        <item name="android:textSize">@dimen/text_font_size_header_16</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_16">
        <item name="android:fontFamily">@font/core_sans_cr_45_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_font_size_header_16</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView_16.Secondary" parent="TextView_16">
        <item name="android:textColor">@color/colorText2</item>
    </style>

    <style name="TextView_16.Secondary_4_12" parent="TextView_16.Secondary">
        <item name="android:textColor">@color/colorText4</item>
        <item name="android:textSize">@dimen/text_font_size_header_12</item>
    </style>

    <style name="TextView_16.Secondary_2_12" parent="TextView_16.Secondary">
        <item name="android:textColor">@color/colorText2</item>
        <item name="android:textSize">@dimen/text_font_size_header_12</item>
    </style>

    <style name="TextView_18" parent="TextView_16">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView_18.colorText" parent="TextView_18">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView_14">
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:textColor">@color/colorSecondary3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:paddingEnd">19dp</item>
        <item name="android:paddingStart">19dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@null</item>
        <item name="icon">@drawable/svg_arrow_right</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@null</item>
        <item name="icon">@drawable/svg_arrow_right</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="ButtonText.Secondary" parent="ButtonText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText2</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/colorText2</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">15dp</item>
    </style>

    <style name="ButtonStyle.PrimaryColor" parent="ButtonStyle">
        <item name="android:background">@drawable/ripple_btn_primary_color_selector</item>
    </style>

    <style name="ButtonStyle.White" parent="ButtonStyle">
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="iconSize">18dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:background">@drawable/ripple_btn_white_selector</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonStyle.Error" parent="ButtonStyle">
        <item name="iconTint">@color/colorRed</item>
        <item name="android:background">@drawable/ripple_btn_negative_color_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- TextInputLayouts -->
    <style name="TextInputLayoutStyle_2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutStyleSearch" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorWhite</item>
    </style>

    <!-- TextEditInputs -->
    <style name="TextEditInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorSecondary4</item>
        <item name="android:textSize">@dimen/text_font_size_header_16</item>
    </style>

    <style name="TextEditInputSearch" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.MyApp.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <!-- Custom margin -->
        <item name="android:layout_margin">0dp</item>
        <!-- Custom padding -->
        <item name="android:padding">0dp</item>
    </style>

</resources>
