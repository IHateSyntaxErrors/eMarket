<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unipi.p17172.emarket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EMarket"
        android:usesCleartextTraffic="true"
        android:fullBackupContent="@xml/backup_descriptor">

        <!-- Splash Screen Activity -->
        <activity
            android:name="com.unipi.p17172.emarket.ui.activities.SplashActivity"
            android:theme="@style/Theme.EMarket.NoActionBar"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home/Main Activity -->
        <activity
            android:name="com.unipi.p17172.emarket.ui.activities.MainActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.EMarket.NoActionBar3">
        </activity>

        <!-- Product Details Activity -->
        <activity
            android:name="com.unipi.p17172.emarket.ui.activities.ProductDetailsActivity"
            android:label=""
            android:theme="@style/Theme.EMarket.NoActionBar3"
            android:parentActivityName="com.unipi.p17172.emarket.ui.activities.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172.emarket.ui.activities.MainActivity" />
        </activity>

        <!-- Notifications Activity -->
        <activity
            android:name="com.unipi.p17172.emarket.ui.activities.NotificationsActivity"
            android:label="@string/label_activity_notifications"
            android:theme="@style/Theme.EMarket.NoActionBar3"
            android:parentActivityName="com.unipi.p17172.emarket.ui.activities.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172.emarket.ui.activities.MainActivity" />
        </activity>

        <!-- Sign in activity -->
        <activity
            android:name="com.unipi.p17172.emarket.ui.activities.SignInActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.EMarket.NoActionBar2"/>

        <!-- Sign in with phone number activity -->
        <activity
            android:name="com.unipi.p17172.emarket.ui.activities.SignInPhoneActivity"
            android:label="@string/label_activity_sign_in_with_phone_number"
            android:launchMode="singleTask"
            android:parentActivityName="com.unipi.p17172.emarket.ui.activities.SignInActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172.emarket.ui.activities.SignInActivity" />
        </activity>

        <!-- Phone number registration activity -->
        <activity
            android:name="com.unipi.p17172.emarket.ui.activities.SignInPhoneVerificationActivity"
            android:label="@string/label_activity_sign_in_with_phone_number_verification"
            android:parentActivityName="com.unipi.p17172.emarket.ui.activities.SignInPhoneActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172.emarket.ui.activities.SignInPhoneActivity" />
        </activity>

        <!-- Fill your account information after phone number verification activity -->
        <activity
            android:name="com.unipi.p17172.emarket.ui.activities.FillAccInfoActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.EMarket.NoActionBar2" />
    </application>

</manifest>