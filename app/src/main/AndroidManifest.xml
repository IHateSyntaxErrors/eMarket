<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unipi.p17172.emarket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EMarket"
        android:usesCleartextTraffic="true"
        android:fullBackupContent="@xml/backup_descriptor">

        <!-- [START fcm_default_icon] -->
        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
             See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_name" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <!-- [END fcm_default_icon] -->
        <!-- [START fcm_default_channel] -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
        <!-- [END fcm_default_channel] -->

        <!-- region [START Activities] -->
            <!-- Splash Screen Activity -->
            <activity
                android:name="com.unipi.p17172.emarket.ui.activities.SplashActivity"
                android:theme="@style/Theme.EMarket.NoActionBar"
                android:screenOrientation="fullSensor"
                android:exported="true">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>

            <!-- Home/Main Activity -->
            <activity
                android:name="com.unipi.p17172.emarket.ui.activities.MainActivity"
                android:theme="@style/Theme.EMarket.NoActionBar3">
            </activity>

            <!-- Product Details Activity -->
            <activity
                android:name="com.unipi.p17172.emarket.ui.activities.ProductDetailsActivity"
                android:theme="@style/Theme.EMarket.NoActionBar3"
                android:parentActivityName="com.unipi.p17172.emarket.ui.activities.MainActivity"
                android:exported="true">

                <intent-filter>
                    <action android:name="ProductDetailsActivity"/>
                    <category android:name="android.intent.category.DEFAULT"/>
                </intent-filter>

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.p17172.emarket.ui.activities.MainActivity" />
            </activity>

            <!-- List Products Activity -->
            <activity
                android:name="com.unipi.p17172.emarket.ui.activities.ListProductsActivity"
                android:theme="@style/Theme.EMarket.NoActionBar3"
                android:parentActivityName="com.unipi.p17172.emarket.ui.activities.MainActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.p17172.emarket.ui.activities.MainActivity" />
            </activity>

            <!-- Notifications Activity -->
            <activity
                android:name="com.unipi.p17172.emarket.ui.activities.NotificationsActivity"
                android:theme="@style/Theme.EMarket.NoActionBar3"
                android:parentActivityName="com.unipi.p17172.emarket.ui.activities.MainActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.p17172.emarket.ui.activities.MainActivity" />
            </activity>

            <!-- Sign In activity -->
            <activity
                android:name="com.unipi.p17172.emarket.ui.activities.SignInActivity"
                android:launchMode="singleTask"
                android:windowSoftInputMode="adjustResize"
                android:theme="@style/Theme.EMarket.NoActionBar4"
                android:parentActivityName="com.unipi.p17172.emarket.ui.activities.MainActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.p17172.emarket.ui.activities.MainActivity" />
            </activity>

            <!-- Sign Up activity -->
            <activity
                android:name="com.unipi.p17172.emarket.ui.activities.SignUpActivity"
                android:launchMode="singleTask"
                android:windowSoftInputMode="adjustResize"
                android:theme="@style/Theme.EMarket.NoActionBar4"
                android:parentActivityName="com.unipi.p17172.emarket.ui.activities.SignInActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.p17172.emarket.ui.activities.SignInActivity" />
            </activity>

            <!-- Forgot Password activity -->
            <activity
                android:name="com.unipi.p17172.emarket.ui.activities.ForgotPasswordActivity"
                android:launchMode="singleTask"
                android:windowSoftInputMode="adjustResize"
                android:theme="@style/Theme.EMarket.NoActionBar4"
                android:parentActivityName="com.unipi.p17172.emarket.ui.activities.SignInActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.p17172.emarket.ui.activities.SignInActivity" />
            </activity>

            <!-- Update Profile activity -->
            <activity
                android:name="com.unipi.p17172.emarket.ui.activities.UpdateProfileActivity"
                android:launchMode="singleTask"
                android:windowSoftInputMode="adjustResize"
                android:theme="@style/Theme.EMarket.NoActionBar4"
                android:parentActivityName="com.unipi.p17172.emarket.ui.activities.SignInActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.p17172.emarket.ui.activities.SignInActivity" />
            </activity>

            <!-- All Categories activity -->
            <activity
                android:name="com.unipi.p17172.emarket.ui.activities.AllCategoriesActivity"
                android:launchMode="singleTask"
                android:windowSoftInputMode="adjustResize"
                android:theme="@style/Theme.EMarket.NoActionBar3"
                android:parentActivityName="com.unipi.p17172.emarket.ui.activities.MainActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.p17172.emarket.ui.activities.MainActivity" />
            </activity>
        <!-- endregion [END Activities] -->

        <!-- [START firebase_service] -->
        <service
            android:name=".service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->

        <receiver android:name=".service.NotificationReceiver"/>
    </application>

</manifest>
