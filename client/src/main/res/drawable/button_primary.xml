<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?colorControlHighlight">

    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/colorSecondary2" android:endColor="@color/colorSecondary3"/>
                    <corners android:radius="19dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimaryLight"/>
                    <corners android:radius="19dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
